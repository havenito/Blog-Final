{% extends 'base.html.twig' %}

{% block title %}Ajouter un commentaire - {{ post.title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>{{ post.title }}</h1>

        <div class="mt-4">
            <h3>Ajouter un commentaire</h3>

            {{ form_start(form) }}
                <div class="form-floating mb-3">
                    {{ form_widget(form.content, { 'attr': { 'class': 'form-control', 'placeholder': 'Votre commentaire...' } }) }}
                    <label for="comment_content">Votre commentaire</label>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary btn-lg">Publier</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}