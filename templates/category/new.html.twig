{# templates/category/new.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bootstrap/css/category-new.css') }}">
    <link rel="stylesheet" href="{{ asset('bootstrap/css/category-list.css') }}">
{% endblock %}

{% block title %}Ajouter une catégorie{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-dark fw-bold">Ajouter une nouvelle catégorie</h1>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="mb-3">
                    <label for="{{ form.name.vars.id }}" class="form-label">Nom de la catégorie</label>
                    {{ form_widget(form.name, { 'attr': { 'class': 'form-control' } }) }}
                </div>
                <div class="mb-3">
                    <label for="{{ form.description.vars.id }}" class="form-label">Description</label>
                    {{ form_widget(form.description, { 'attr': { 'class': 'form-control' } }) }}
                </div>
                <div class="d-flex justify-content-end">
                    {{ form_widget(form.submit, { 'attr': { 'class': 'btn btn-primary btn-lg shadow-lg hover-illuminate' } }) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}