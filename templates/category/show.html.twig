{# templates/category/show.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bootstrap/css/category-show.css') }}">
{% endblock %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">{{ category.name }}</h1>
    <p class="text-muted text-center">{{ category.description }}</p>

    <h3 class="mt-4">Articles dans cette catégorie</h3>
    <div class="row g-4 mt-3">
        {% for post in category.posts %}
            <div class="col-md-4">
                <div class="card shadow-sm h-100">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <p class="card-text flex-grow-1">{{ post.content|slice(0, 100) ~ '...' }}</p>
                        <a href="{{ path('post_show', {id: post.id}) }}" class="btn btn-primary mt-auto">Lire l'article</a>
                    </div>
                    <div class="card-footer text-muted text-center">
                        <small>Publié par {{ post.user.firstName }} {{ post.user.lastName }}</small>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-center">Aucun article dans cette catégorie.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
